<openerp>
<data>

<!-- Add fields on invoice line view -->
<record id="bi_invoice_cc_invoice_line_form" model="ir.ui.view">
    <field name="name">bi.invoice.cc.invoice.line.form</field>
    <field name="model">account.invoice.line</field>
    <field name="inherit_id" ref="account.view_invoice_line_form" />
    <field name="arch" type="xml">
        <field name="invoice_line_tax_id" position="after">
<!--            <separator string="Converted amounts" colspan="4" />
Space is too limited on invoice line form view in v6.1
 -->
            <field name="price_unit_company_currency" />
            <field name="price_subtotal_company_currency" />
        </field>
    </field>
</record>

<!-- Add fields on invoice view -->
<record id="bi_invoice_cc_invoice_form" model="ir.ui.view">
    <field name="name">bi.invoice.cc.invoice.form</field>
    <field name="model">account.invoice</field>
    <field name="inherit_id" ref="account.invoice_form" />
    <field name="arch" type="xml">
        <field name="move_id" position="after">
            <separator colspan="4" string="Converted amounts"/>
            <field name="amount_untaxed_company_currency" />
            <field name="amount_total_company_currency" />
        </field>
    </field>
</record>

</data>
</openerp>
